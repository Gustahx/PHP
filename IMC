<?php

$peso = 66.0;
$altura = 1.70;

$imc = $peso / ($altura*$altura);
echo"IMC: ".number_format($imc,2)."<br>";

if ( $imc < 18.5) {
    echo " Abaixo do peso " ;
}
else if ($imc >= 18.5 && $imc < 25) { 
        echo "Peso Ideal";
  }
else if ($imc >= 25 && $imc <= 30) {
     echo "Sobrepeso";
    }
else {
    echo "Obesidade";
}
?>
